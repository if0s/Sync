{
  "title": "Sync by AVA",
  "description": "Sync extension to connect with Sync Mongo Storage Engine",
  "docsUrl": "https://github.com/thatapp/Sync",
  "buildType":"docker",
  "envVars": {
    "USERNAME": {
      "required": true,
      "description": "Your Mongo Username"
    },
    "PASSWORD": {
      "required": true,
      "description": "Your Mongo Password"
    },
    "API_KEY": {
      "required": true,
      "description": "Kindly enter the API Key for the Data APIs to be functional"
    }
  },
  "credentials": {
    "fields": {
      "username": {
        "label": "Username",
        "viewClass": "TextFieldView",
        "required": true,
        "prompt": "Kindly enter Mongo DB username"
      },
      "password": {
        "label": "Password",
        "viewClass": "TextFieldView",
        "required": true,
        "prompt": "Kindly enter Mongo DB Password"
      },
      "db_admin": {
        "label": "DB Admin",
        "viewClass": "TextFieldView",
        "required": true,
        "prompt": "Kindly enter MongoDB Admin"
      }
    },
    "mongo_credential": {
      "username": "{{USERNAME}}",
      "password": "{{PASSWORD}}"
    }
  },
  "actions": {
    "upsert_old": {
      "main": "./lib/actions/upsert_old.js",
      "title": "Upsert data via MongoDB connector",
      "description": "Upsert data",
      "metadata": {
        "in": "./lib/schemas/upsert.in.json"
      }
    },
    "upsert": {
      "main": "./lib/actions/upsert.js",
      "title": "Upsert using Data API",
      "description": "Upsert data using Data API",
      "metadata": {
        "in": "./lib/schemas/upsert.in.json"
      }
    },
    "aggregate_old": {
      "main": "./lib/actions/aggregate_old.js",
      "title": "Aggregation into Sync using MongoDB",
      "description": "Update data",
      "fields": {
        "behaviour": {
          "viewClass": "SelectView",
          "prompt": "Emit Behavior",
          "label": "Emit Behavior",
          "required": true,
          "model": {
            "individually": "Emit Individually",
            "fetch_all": "Fetch All"
          }
        }
      },
      "metadata": {
        "in": "./lib/schemas/aggregation.in.json"
      }
